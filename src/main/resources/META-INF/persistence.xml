<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">
  <persistence-unit name="sampleUnit" transaction-type="JTA">
    <jta-data-source>java:comp/env/jdbc/DataSource</jta-data-source>
    <class>sample.jpa.entity.Address</class>
    <class>sample.jpa.entity.Author</class>
    <class>sample.jpa.entity.Book</class>
    <class>sample.jpa.entity.Publisher</class>
    <class>sample.jpa.entity.User</class>
    <class>sample.jpa.entity.Complex</class>
  </persistence-unit>
</persistence>
